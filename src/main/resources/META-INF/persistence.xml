<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="ogmdemo" transaction-type="JTA">
        <!-- Use Hibernate OGM provider: configuration will be transparent -->
        <provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>
        <properties>
            <!-- property is optional if you want to use Infinispan, otherwise adjust to your favorite
                NoSQL Datastore provider. -->
            <property name="hibernate.ogm.datastore.provider" value="mongodb"/>
            <property name="hibernate.ogm.datastore.host" value="127.0.0.1"/>
            <property name="hibernate.ogm.datastore.port" value="27017"/>
            <property name="hibernate.ogm.datastore.database" value="testdb"/>
            <property name="hibernate.ogm.datastore.create_database" value="true"/>

            <!--
            <property name="hibernate.ogm.mongodb.username" value="riz"/>
            <property name="hibernate.ogm.mongodb.password" value="riz1"/>
            -->

            <!--
             more props: http://docs.jboss.org/hibernate/ogm/4.1/reference/en-US/html_single/#_configuring_mongodb
            -->

            <!-- defines which JTA Transaction we plan to use -->
            <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.JBossStandAloneJtaPlatform"/>
        </properties>
    </persistence-unit>
</persistence>